# .sqlfluff
[sqlfluff]
dialect = postgres
# інколи в навчальних прикладах зручно дозволити короткі alias у FROM:
exclude_rules = L031

# довжина рядка ~ як у Python-частині
[sqlfluff:rules:layout.long_lines]
max_line_length = 100

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
capitalisation_policy = lower